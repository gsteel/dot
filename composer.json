{
    "name": "gsteel/dot",
    "description": "A Utility for retrieving typed values from nested arrays",
    "homepage": "https://github.com/gsteel/dot",
    "support": {
        "issues": "https://github.com/gsteel/dot/issues",
        "source": "https://github.com/gsteel/dot",
        "rss": "https://github.com/gsteel/dot/releases.atom"
    },
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "keywords": [
        "array",
        "dot",
        "config",
        "configuration",
        "utility"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "~8.0 || ~8.1"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.20"
    },
    "autoload": {
        "psr-4": {
            "GSteel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GSteel\\Test\\": "test/"
        }
    }
}
